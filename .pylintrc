[MASTER]
ignore=CVS
ignore-patterns=
persistent=yes
load-plugins=
jobs=1
unsafe-load-any-extension=no
extension-pkg-whitelist=

[FORMAT]
max-line-length=120
indent-string='    '

[MESSAGES CONTROL]
confidence=
disable=C0111,C0103,W0611,E1101

[REPORTS]
output-format=text
files-output=no
reports=yes
evaluation=10.0 - ((float(5 * error + warning + refactor + convention) / statement) * 10)

[VARIABLES]
init-import=no
dummy-variables-rgx=_$|dummy

[TYPECHECK]
ignore-mixin-members=yes
ignored-classes=optparse.Values,thread._local,_thread._local

[MISCELLANEOUS]
notes=FIXME,XXX,TODO

[SIMILARITIES]
min-similarity-lines=4
ignore-comments=yes
ignore-docstrings=yes
ignore-imports=no
